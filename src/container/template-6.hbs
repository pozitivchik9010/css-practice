<header class="header">
	<a class="#test">
		{{> logo}}
	</a>
	<nav class="header_nav">
		<div class=" header_nav_right">
			{{> nav list=header }}
		</div>
	</nav>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>
	</div>
	{{/with}}
	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" id="{{id}}" name="{{name}}">
			{{/each}}
		</div>

		<div class="form_checkbox_block">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>


		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>

	</form>
	{{/with}}



</main>
{{#with updates}}
<div class="updates">
	<h1 class="updates_title">{{title}}</h1>


	{{#each list}}
	<div class="updates_list">
		<img class="updates_list_img" src="https://picsum.photos/500/500" alt="">


		<p class="updates_list_description">
			<strong class="updates_list_nickname">{{nickname}}</strong>

			{{description}}
		</p>


	</div>

	{{/each}}

	<a href="{{show_all.url}}" class="updates_list_link">{{show_all.text}}</a>

</div>
{{/with}}

{{#with expirience}}

<div class="expirience">
	<h1 class="expirience_title">{{title}}</h1>
	<button class="expirience_item">hot!</button>
	<div class="expirience_list">
		{{#each list}}
		<div>
			<strong>{{name}}</strong>
			<p>{{details}}</p>
		</div>


		{{/each}}
	</div>
</div>
{{/with}}

<footer class=" footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}

</footer>